<published-date>
  <a href="{{ resource.absolute_url }}">
    <p>
      <sl-icon library="remixicon" name="system/time-line"></sl-icon>
      <time
        datetime="{{ resource.data.date | strftime: "%Y-%m-%d %H:%M" }}"
        title="{{ resource.data.date | strftime: "%A, %B %-d, %Y at %-I:%M %p Pacific Time" }}"
      >Published on {{ resource.data.date | strftime: "%B %-d, %Y @ %-I%P" }}</time>
    </p>
  </a>
</published-date>